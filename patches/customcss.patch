+:root {
+    /* Change me */
+    --accent: #272c52;
+    --color-primary: #24292e;
+    --color-secondary: rgb(100, 100, 100);
+    --color-bg: white;
+    --item-bg: #f5f5f5;
+    --scrollbar-bg: var(--color-bg);
+    --scrollbar-thumb: var(--color-secondary);
+    --shadow-shape: 2px 5px 8px;
+    --color-shadow: rgba(0, 0, 0, .1);
+    --border-radius: 6px;
+}
+
+/* SHAPES AND SIZES */
+
+:root {
+    --content-width: 40rem;
+    --content-margin: 1.5rem;
+    --content-padding: 1.5rem;
+    --item-margin: 0;
+}
+
+@media (max-width: 375px) {
+  :root {
+      --scale: 0.8;
+      --content-width: 90%;
+  }
+}
+
+@media (max-width: 414px) {
+    :root {
+        --scale: 0.9;
+        --content-width: 100%;
+        --content-margin: 0.5rem;
+        --content-padding: 1rem;
+        --item-margin: 0.5rem;
+    }
+}
+
+@media (min-width: 460px) {
+    :root {
+        --scale: 1;
+    }
+}
+
+@media (min-width: 1000px) {
+    :root {
+        --scale: 1.1;
+    }
+}
+
+/* feed */
+
+div.properties__row  {
+    flex-direction: row;
+    justify-content: space-between;
+    position: relative;
+    min-height: 1.5rem;
+    max-height: 4rem;
+}
+
+p.properties {
+    padding-top: 0 !important;
+}
+
+.icon {
+    color: var(--color-secondary);
+    position: relative;
+}
+
+svg.feather {
+    height: 1.25rem;
+}
+
+ul#feed__ul {
+    position: relative;
+    margin: 0;
+    padding: 0;
+    max-width: var(--content-width);
+    min-width: 100%;
+}
+
+li.feed__li {
+    list-style-type: none;
+    position: relative;
+    margin: var(--item-margin) 0;
+    margin-bottom: calc(var(--item-margin) * 2);
+    z-index: 2;
+}
+
+div.feed__content {
+    overflow: hidden;
+    word-wrap: break-word;
+    background-color: var(--item-bg);
+    box-shadow: var(--shadow-shape) var(--color-shadow);
+    padding: var(--content-padding);
+    margin: var(--content-margin);
+    border-radius: var(--border-radius);
+    border: 2px solid var(--accent);
+}
+
+#open {
+    position: relative;
+    width: 100%;
+    padding: 0;
+    padding-top: 1rem;
+    max-width: 100%;
+    background-color: var(--item-bg);
+    text-align: center;
+}
+
+#open>a {
+    z-index: 2;
+}
+
+#tag-list {
+    margin: 0.5rem 2rem;
+    list-style-type: disc;
+}
+
+#tag {
+    z-index: 2;
+    margin: 0 0.25rem !important;
+}
+
+/* markdown content */
+
+.md p>a {
+    border-bottom: 1px solid var(--accent);
+}
+
+.md h1, .md h2, .md h3, .md h4 {
+    padding-top: 1rem;
+}
+
+.md p {
+    padding-top: 1.5rem;
+}
+
+.md p:last-child {
+    padding-bottom: 1.5rem !important;
+}
+
+.md ul, ol {
+    padding: 1rem;
+    padding-left: 2rem;
+}
+
+.md table {
+    width: 100%;
+}
+
+.md table, .md tr, .md td {
+    border-collapse: collapse;
+    border: 1px solid var(--color-secondary);
+}
+
+.properties {
+    color: var(--color-secondary);
+    font-size: calc(0.8rem * var(--scale));
+}
+
+blockquote {
+    font-style: italic;
+    border-left: 3px solid var(--color-secondary);
+    padding-top: 0 !important;
+    padding-left: 1rem;
+}
+
+blockquote > p:first-child {
+    padding-top: 0 !important;
+}
+
+/* code blocks */
+
+.md code {
+    font-size: calc(0.85rem * var(--scale));
+    padding: 0 0.25rem;
+}
+
+div.highlight {
+    overflow: hidden;
+    overflow-x: auto;
+    scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-bg);
+    scrollbar-width: thin;
+    margin: 1rem 0;
+    font-size: calc(0.8rem * var(--scale));
+}
+
+div.highlight > pre {
+    padding: 0.5rem;
+}
+
+div.highlight::-webkit-scrollbar {
+    width: 1em;
+}
+
+div.highlight::-webkit-scrollbar-track {
+    background: var(--scrollbar-bg);
+}
+
+div.highlight::-webkit-scrollbar-thumb {
+    background-color: var(--scrollbar-thumb);
+    border-radius: 6px;
+    border: 3px solid var(--scrollbar-border);
+}
